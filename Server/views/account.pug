extend base

block content 
    #container
        h1= title 

            //- form.form(action='/login', method='post')
        form.form.form-name
            h2 Modifier mes informations
            .form-group
                label(for='name') Votre nom  :
                input(type='text', name='name', placeholder=`${user.name}`, required)
            .form-group
                label(for='firstname') Votre prénom  :
                input(type='text', name='firstname', placeholder=`${user.firstname}`, required)
            .form-group   
                label(for='email') Votre email :
                input(type='email', name='email', placeholder=`${user.email}`, required)
            .form-group.right 
                button  Valider
        

        form.form.form-password
            h2 Changer de mot de passe
            .form-group
                label(for='password-current') Votre mot de passe actuel:
                input(type='password', placeholder='••••••••', required, minlength='8')
            .form-group
                label(for='password') Nouveau mot de passe :
                input(type='password', name='password', placeholder='••••••••', required, minlength='8')
            .form-group  
                label(for='password-confirm') Confirmer le mot de passe :
                input(type='password', name='password-confirm', placeholder='••••••••', required, minlength='8')
            .form-group.right 
                button  Valider

        if (user.role === 'admin')
            form.form.form-admin
                h2 Gestion des utilisateurs
                .form-group
                    label(for='email') Email de l'utilisateur à supprimer :
                    input(type='email', name='email', placeholder='Email', required)
                .form-group.right 
                    button  Supprimer
